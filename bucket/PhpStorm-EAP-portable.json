{
    "version": "2019.2-192.5438.24",
    "description": "PhpStorm Early Access Program. Cross-Platform, Lightning-Smart IDE for PHP programming by JetBrains.",
    "homepage": "https://www.jetbrains.com/phpstorm/",
    "url": "https://download.jetbrains.com/webide/PhpStorm-192.5438.24.exe#/cosi.7z",
    "hash": "737cec540e577225c3eaa827ff47cba46265d364c313741dc3dd045fcddb1fce",
    "extract_to": "IDE",
    "installer": {
        "script": [
            "$currentDir = \"$(Split-Path \"$dir\")\\current\" -replace '\\\\', '/'",
            "$newDir = \"$(Split-Path \"$dir\")\\current\\IDE\" -replace '\\\\', '/'",
            "$IDE = \"$dir\\IDE\"",
            "$file = 'IDE\\bin\\idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' \"$file\" 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\$file\"",
            "    $profileDir = \"$currentDir/profile\"",
            "    $CONT = Get-Content \"$file\"",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^# idea.config.path=.*$', \"idea.config.path=$profileDir/config\"",
            "    $CONT = $CONT -replace '^# idea.system.path=.*$', \"idea.system.path=$profileDir/system\"",
            "    $CONT = $CONT -replace '^# idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^# idea.log.path=', 'idea.log.path='",
            "        # Rewrite properties file",
            "    Set-Content \"$file\" ($CONT -join \"`r`n\") -Force -Encoding Ascii",
            "}",
            "Remove-Item \"$IDE\\`$*\" -Force -Recurse"
        ]
    },
    "persist": [
        "IDE\\bin\\idea.properties",
        "profile"
    ],
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\phpstorm64.exe",
                    "PhpStorm (Early Access Program)"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\phpstorm.exe",
                    "PhpStorm (Early Access Program)"
                ]
            ]
        }
    },
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=PS&latest=true&platform=zip&type=eap",
        "regex": "version\":\"(?<ver>[\\d\\.]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/webide/PhpStorm-$preReleaseVersion.exe#/cosi.7z",
        "hash": {
            "url": "$url.sha256"
        }
    }
}

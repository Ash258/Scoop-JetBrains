{
    "version": "2019.3-193.5233.24",
    "description": "RubyMine Early Access Program. Cross-Platform Ruby on Rails IDE by JetBrains.",
    "homepage": "https://www.jetbrains.com/rubymine/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.jetbrains.com/store/license.html"
    },
    "url": "https://download.jetbrains.com/ruby/RubyMine-193.5233.24.exe#/cosi.7z",
    "hash": "0af2060108617fc93b7d03af4dedb75a5dcde668c74a15a930ba523406cb898c",
    "extract_to": "IDE",
    "installer": {
        "script": [
            "$split = Split-Path $dir",
            "$currentDir = \"$split\\current\" -replace '\\\\', '/'",
            "$IDE = \"$dir\\IDE\"",
            "$file = 'IDE\\bin\\idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\$file\"",
            "    $profileDir = \"$currentDir/profile\"",
            "    $CONT = Get-Content $file",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^#\\s*idea.config.path=.*$', \"idea.config.path=$profileDir/config\"",
            "    $CONT = $CONT -replace '^#\\s*idea.system.path=.*$', \"idea.system.path=$profileDir/system\"",
            "    $CONT = $CONT -replace '^#\\s*idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^#\\s*idea.log.path=', 'idea.log.path='",
            "        # Rewrite properties file",
            "    Set-Content $file $CONT -Encoding Ascii -Force",
            "}",
            "Remove-Item \"$IDE\\`$*\" -Force -Recurse"
        ]
    },
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\rubymine64.exe",
                    "JetBrains\\RubyMine (Early Access Program)"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\rubymine.exe",
                    "JetBrains\\RubyMine (Early Access Program)"
                ]
            ]
        }
    },
    "persist": [
        "IDE\\bin\\idea.properties",
        "profile"
    ],
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=RM&latest=true&platform=zip&type=eap",
        "regex": "version\":\"(?<ver>[\\d.]+)\".*\"build\":\"(?<build>[\\d.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/ruby/RubyMine-$preReleaseVersion.exe#/cosi.7z",
        "hash": {
            "url": "$url.sha256"
        }
    }
}

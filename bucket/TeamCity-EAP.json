{
    "version": "2018.2.2.61245",
    "description": "TeamCity. Powerful Continuous Integration out of the box by JetBrains.",
    "homepage": "https://www.jetbrains.com/teamcity/",
    "url": "https://download.jetbrains.com/teamcity/TeamCity-2018.2.2.exe#/cosi.7z",
    "hash": "9f37af19ba2164839f0f56a0c28a1608c208522a6a994ceff058d8da12a77875",
    "notes": [
        "TeamCity could be runned from anywhere using 'teamcity' command.",
        "Run 'teamcity --help' to get more info."
    ],
    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\" -Recurse",
            "    # Create custom shim like script",
            "$ver_path = \"$original_dir\\bin\"",
            "$cont = @(",
            "    \"Push-Location \"\"$ver_path\"\"\"",
            "    '& .\\teamcity-server.bat @args'",
            "    'Pop-Location'",
            ")",
            "Set-Content \"$dir\\teamcity.ps1\" ($cont -join \"`r`n\") -Encoding Ascii"
        ]
    },
    "bin": [
        "teamcity.ps1",
        [
            "teamcity.ps1",
            "teamcity-server"
        ]
    ],
    "persist": "conf",
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=TC&latest=true&platform=windows&type=eap",
        "regex": "version\":\"(?<ver>[\\d\\.]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}.${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/teamcity/TeamCity-$matchHead.exe#/cosi.7z",
        "hash": {
            "url": "$url.sha256"
        }
    }
}

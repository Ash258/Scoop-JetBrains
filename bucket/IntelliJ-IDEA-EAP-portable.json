{
    "version": "2019.1.2-191.7141.2",
    "description": "IntelliJ IDEA Community Early Access Program. Cross-Platform Java IDE for professional developers by JetBrains.",
    "homepage": "https://www.jetbrains.com/idea/",
    "url": "https://download.jetbrains.com/idea/ideaIC-191.7141.2.win.zip",
    "hash": "f969f08ae201f53291be08dea995ab2cbf36f9553ff8fabab7a3826c42d989ef",
    "extract_to": "IDE",
    "installer": {
        "script": [
            "$currentDir = \"$(Split-Path \"$dir\")\\current\" -replace '\\\\', '/'",
            "$newDir = \"$(Split-Path \"$dir\")\\current\\IDE\" -replace '\\\\', '/'",
            "$IDE = \"$dir\\IDE\"",
            "$file = 'IDE\\bin\\idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' \"$file\" 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\$file\"",
            "    $profileDir = \"$currentDir/profile\"",
            "    $CONT = Get-Content \"$file\"",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^# idea.config.path=.*$', \"idea.config.path=$profileDir/config\"",
            "    $CONT = $CONT -replace '^# idea.system.path=.*$', \"idea.system.path=$profileDir/system\"",
            "    $CONT = $CONT -replace '^# idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^# idea.log.path=', 'idea.plugins.path='",
            "        # Rewrite properties file",
            "    Set-Content \"$file\" ($CONT -join \"`r`n\") -Force -Encoding Ascii",
            "}",
            "Remove-Item \"$IDE\\`$*\" -Force -Recurse"
        ]
    },
    "persist": [
        "IDE\\bin\\idea.properties",
        "profile"
    ],
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\idea64.exe",
                    "IntelliJ IDEA Community (Early Access Program)"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "IDE\\bin\\idea.exe",
                    "IntelliJ IDEA Community (Early Access Program)"
                ]
            ]
        }
    },
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=IIC&latest=true&platform=zip&type=eap",
        "regex": "version\":\"(?<ver>[\\d\\.]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/idea/ideaIC-$preReleaseVersion.win.zip",
        "hash": {
            "url": "$url.sha256"
        }
    }
}

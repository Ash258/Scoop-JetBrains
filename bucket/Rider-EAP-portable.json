{
    "version": "2019.2-EAP3-192.5308.923",
    "description": "Rider (Early Access Program). Fast, powerful and cross-platform .NET IDE by JetBrains.",
    "homepage": "https://www.jetbrains.com/rider/",
    "architecture": {
        "64bit": {
            "url": "https://download.jetbrains.com/rider/JetBrains.Rider-2019.2-EAP3-192.5308.923.Checked.win.zip",
            "hash": "4bdbaca1410598e8a1165e1f9f11dded99e4fc62fa8b276ef01d57ef05ebfc70",
            "shortcuts": [
                [
                    "IDE\\bin\\rider64.exe",
                    "Rider (Early Access Program)"
                ]
            ]
        }
    },
    "extract_to": "IDE",
    "installer": {
        "script": [
            "$currentDir = \"$(Split-Path \"$dir\")\\current\" -replace '\\\\', '/'",
            "$newDir = \"$(Split-Path \"$dir\")\\current\\IDE\" -replace '\\\\', '/'",
            "$IDE = \"$dir\\IDE\"",
            "$file = 'IDE\\bin\\idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' \"$file\" 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\$file\"",
            "    $profileDir = \"$currentDir/profile\"",
            "    $CONT = Get-Content \"$file\"",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^# idea.config.path=.*$', \"idea.config.path=$profileDir/config\"",
            "    $CONT = $CONT -replace '^# idea.system.path=.*$', \"idea.system.path=$profileDir/system\"",
            "    $CONT = $CONT -replace '^# idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^# idea.log.path=', 'idea.log.path='",
            "        # Rewrite properties file",
            "    Set-Content \"$file\" ($CONT -join \"`r`n\") -Force -Encoding Ascii",
            "}",
            "Remove-Item \"$IDE\\`$*\" -Force -Recurse"
        ]
    },
    "persist": [
        "IDE\\bin\\idea.properties",
        "profile"
    ],
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=RD&latest=true&platform=zip&type=eap",
        "regex": "version\":\"(?<ver>[\\w\\.-]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.jetbrains.com/rider/JetBrains.Rider-$version.Checked.win.zip",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}

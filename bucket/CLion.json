{
    "version": "2019.1.2-191.6707.69",
    "description": "CLion. Cross-Platform IDE for C and C++ by JetBrains.",
    "homepage": "https://www.jetbrains.com/cpp/",
    "architecture": {
        "64bit": {
            "url": "https://download.jetbrains.com/cpp/CLion-2019.1.2.win.zip",

{
    "version": "2018.3.3-183.5153.33",
    "description": "WebStorm. Cross-Platform, Smart JavaScript IDE by JetBrains.",
    "homepage": "https://www.jetbrains.com/webstorm/",
    "url": "https://download.jetbrains.com/webstorm/WebStorm-2018.3.3.exe#/cosi.7z",
    "hash": "c6b7e2ff563a10e63e46df42166d5eb63dd29fe7b813a4903c4e2368f4df0f5c",
    "architecture": {
        "64bit": {
            "bin": [
                "bin\\webstorm.bat",
                "bin\\webstorm64.exe"
            ],
            "shortcuts": [
                [
                    "bin\\webstorm64.exe",
                    "WebStorm"
                ]
            ]
        },
        "32bit": {
            "bin": "bin\\webstorm.exe",
            "shortcuts": [
                [
                    "bin\\webstorm.exe",
                    "WebStorm"
                ]
            ]
        }
    },
    "installer": {
        "script": [
            "$newDir = \"$(Split-Path \"$dir\")\\current\" -replace '\\\\', '/'",
            "$file = 'idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\bin\\$file\"",
            "    $CONT = Get-Content $file",
            "    $persistedConfigDir = \"$newDir/persistedConfig\"",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^# idea.config.path=.*$', \"idea.config.path=$persistedConfigDir/config\"",
            "    $CONT = $CONT -replace '^# idea.system.path=.*$', \"idea.system.path=$persistedConfigDir/system\"",
            "    $CONT = $CONT -replace '^# idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^# idea.log.path=', 'idea.plugins.path='",
            "        # Rewrite properties file",
            "    Set-Content $file ($CONT -join \"`r`n\") -Encoding Ascii -Force",
            "}",
            "Remove-Item \"$dir\\`$*\" -Force -Recurse"
        ]
    },
    "persist": [
        "bin\\idea.properties",
        "persistedConfig"
    ],
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=WS&latest=true&platform=zip&type=release",
        "regex": "version\":\"(?<ver>[\\d\\.]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/webstorm/WebStorm-$matchVer.exe#/cosi.7z",
        "hash": {
            "url": "$url.sha256"
        }
    }
}
